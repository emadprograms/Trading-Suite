#!/bin/bash

# Get the directory of THIS script (Contents/MacOS)
DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"

# Target the launcher script in Resources
LAUNCHER="$DIR/../Resources/launcher.sh"

# Launch it using Terminal.app
# This breaks out of the app sandbox/quarantine and runs in the user's trusted terminal context.
open -a Terminal "$LAUNCHER"

# Exit the wrapper immediately (the app bundle job is done)
exit 0
